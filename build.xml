<project name="Stratego">
	<target name ="build">
	<mkdir dir="build"/>		
	<javac srcdir="src"
		destdir="build"
		classpath="lib/junit-4.12.jar"
		includeantruntime="false" />

	</target>
	
	<target name="run" depends="build" >
		<java classname="be.ac.umons.stratego.graphic.Interface" fork="true"
			  classpath="build"/>
	</target>
	
	<target name="clean">
		<delete dir ="build"/>
	</target>
	<target name="test" depends="build">
		<junit printsummary ="yes" showoutput="yes" fork="true">
			<classpath>
				<pathelement path ="lib/junit-4.12.jar"/>
				<pathelement path ="lib/hamcrest-core-1.3.jar"/>
				<pathelement path ="build"/>
			</classpath>
			<formatter type="xml" />
			<batchtest todir="tests">
				<fileset dir ="src" includes="**/*Test*.java"/>
			</batchtest>
		</junit>
	</target>

	<target name="javadoc">
		<javadoc destdir="doc" use="true" sourcepath="src" access="public" >
			<classpath>
				<pathelement path ="lib/junit-4.12.jar"/>
				<pathelement path ="lib/hamcrest-core-1.3.jar"/>
			</classpath>
		</javadoc>
	</target>
</project>
